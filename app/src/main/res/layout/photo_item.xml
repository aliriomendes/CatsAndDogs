<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="180dp"
    android:layout_margin="@dimen/photo_item_margin"
    android:padding="@dimen/photo_item_padding">
    <ImageView
        android:id="@+id/photo_imageView"
        android:transitionName="photo_imageView"
        android:layout_width="@dimen/photo_item_image_width"
        android:layout_height="@dimen/photo_item_image_height"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:gravity="center"
        android:textSize="@dimen/photo_title_text_size"
        android:layout_gravity="bottom"
        android:text="@string/app_name" />
</android.support.v7.widget.CardView>